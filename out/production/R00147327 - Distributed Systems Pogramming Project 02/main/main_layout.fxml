<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.Main">
    <VBox>
        <Label text="Client Folder"/>
        <ListView fx:id="clientMusicList" prefHeight="400.0" prefWidth="300.0"/>
        <Button fx:id="playButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="Play"/>
    </VBox>

    <VBox>
        <Label text="Shared Folder"/>
        <ListView fx:id="sharedMusicList" prefHeight="400.0" prefWidth="300.0"/>
        <HBox>
            <Button fx:id="downloadButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0"
                    text="Download"/>
            <Button fx:id="uploadButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0"
                    text="Upload"/>
        </HBox>
    </VBox>
</HBox>
